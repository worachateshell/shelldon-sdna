# Google Sheets Configuration
GOOGLE_SHEET_ID=your_sheet_id
GOOGLE_DRIVE_FOLDER_ID=your_drive_folder_id
# Path to your service account credentials file (relative to project root)
GOOGLE_APPLICATION_CREDENTIALS=./credentials.json

# LINE Login Configuration
LINE_CHANNEL_ID=your_channel_id
LINE_CHANNEL_SECRET=your_channel_secret
# This must match the callback URL in LINE Developers Console
# e.g., http://localhost:3000/auth/line/callback
LINE_CALLBACK_URL=http://localhost:3000/auth/line/callback

# Session Secret (Change this to a random string)
SESSION_SECRET=wedding_game_secret_key

# Cloudflare R2 Configuration
R2_ACCOUNT_ID=your_r2_account_id
R2_ACCESS_KEY_ID=your_r2_access_key_id
R2_SECRET_ACCESS_KEY=your_r2_secret_access_key
R2_BUCKET_NAME=your_bucket_name
# Optional: Custom domain for R2 bucket (if configured)
R2_PUBLIC_URL=https://your-custom-domain.com
